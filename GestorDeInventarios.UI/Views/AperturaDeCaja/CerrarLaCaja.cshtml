@model GestionDeInventarios.Model.AperturaDeLaCaja

@{
    ViewData["Title"] = "CerrarCaja";
}

<h1>Cierre De Caja</h1>

<div>
    <h4>Detalles Del cierre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            ID del Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            Fecha de Apertura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDeInicio)
        </dd>
        <dt class="col-sm-2">
            Fecha De Cierre
        </dt>
        <dd class="col-sm-10">
            @DateTime.Now;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("VALIDAR", "validarCierre", new { id = Model.Id }, new { style = "display: inline-block; padding: 10px 20px; background-color: #48d193; color: white; text-decoration: none; border-radius: 4px;" })
    |
    <a asp-action="Index" style="display: inline-block; padding: 10px 20px; background-color: #00b3b3; color: white; text-decoration: none; border-radius: 4px;">Regresar</a>

</div>
